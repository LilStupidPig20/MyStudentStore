<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RTF.Mobile.Views.Register.RegisterPage"
             Shell.NavBarIsVisible="False">
    <ContentPage.Content>
        <StackLayout HeightRequest="500" VerticalOptions="EndAndExpand" Margin="30,32,30,108">
            <Button
                HeightRequest="35"
                      HorizontalOptions="StartAndExpand"
                      WidthRequest="50"
                      Command="{Binding ComeBackCommand}"
                      Style="{StaticResource LinkButton}">
                    <Button.Text>
                        <x:String>&lt; Назад</x:String>
                    </Button.Text>
                </Button>
                <Label
                      HeightRequest="45"
                      Text="Регистрация"
                      Style="{StaticResource HeaderLabel}"
                      VerticalOptions="EndAndExpand" 
                      HorizontalOptions="CenterAndExpand" />
                <StackLayout
                    HeightRequest="300" 
                    Margin="20, 30, 40, 20">
                    <Label
                        Style="{StaticResource AssistLabel}"
                        Text="Имя"/>
                    <Entry
                        Text="{Binding Model.Name}"
                        Margin="0,2,0,10"/>
                    <Label
                        Style="{StaticResource AssistLabel}"
                        Text="Фамилия"/>
                    <Entry
                        Text="{Binding Model.LastName}"
                        Margin="0,2,0,10"/>
                    <Label
                        Style="{StaticResource AssistLabel}"
                        Text="Академическая группа"/>
                    <Entry
                        Text="{Binding Model.AcademicGroup}"
                        Margin="0,2,0,10"/>
                    <Label
                        Style="{StaticResource AssistLabel}"
                        Text="Почта"/>
                    <Entry
                        Text="{Binding Model.Email}"
                        Margin="0,2,0,10"/>
                    <Label
                        Style="{StaticResource AssistLabel}"
                        Text="Новый пароль"/>
                    <Entry
                        Text="{Binding Password}"
                        IsPassword="True"
                        Margin="0,2,0,10"/>
                    <Label
                        Style="{StaticResource AssistLabel}"
                        Text="Повторите пароль"/>
                    <Entry
                        Text="{Binding RepeatPassword}"
                        IsPassword="True"
                        Margin="0,2,0,0"/>
                </StackLayout>
            <Button
                HeightRequest="40"
                Command="{Binding RegisterCommand}"
                Text="Зарегистрироваться"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>